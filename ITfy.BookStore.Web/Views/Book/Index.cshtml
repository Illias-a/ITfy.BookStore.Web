@model IEnumerable<ITfy.BookStore.Web.Models.BookViewModel>
@{
    ViewData["Title"] = "Index";
}
<h1>Book list</h1>
@if (!Model.Any())
{
    <h3>No books in stock </h3>
}
else
{
    <table style="width:400px">
        <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Title</td>
                    <td>
                        <a asp-controller="Book" asp-action="Details"
                           asp-route-id="@book.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
